extends ../layouts/layout

block content
  .tab-content
    #tab-content-0.tab-pane.tabs-animation.fade.show.active(role='tabpanel')
      .row.justify-content-center
        .col-md-6
          .main-card.mb-3.card
            .card-body
              h5.card-title Sign Up
              form
                .position-relative.form-group
                  label(for='username') Email
                  input#username.form-control(name='username' placeholder='Username' type='text')
                .position-relative.form-group
                  label(for='email') Email
                  input#email.form-control(name='email' placeholder='Email' type='email')
                .position-relative.form-group
                  label(for='password') Password
                  input#password.form-control(name='password' placeholder='Password' type='password')
                .position-relative.form-group
                  label(for='password-confirm') Password
                  input#password-confirm.form-control(name='password-confirm' placeholder='Confirm Password' type='password')
                button.mt-1.btn.btn-primary Sign Up
                small.form-text.text-muted
                  | Already had an account?
                  a(href='/login') Log In

