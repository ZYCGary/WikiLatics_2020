.search-wrapper.active
  .input-holder
    input#overall-filter.search-input(type='number' placeholder='Number of top articles shown')
    button#overall-search-btn.search-icon
      span

.row.mt-4#overall-top-articles-tables
  //- Top articles with the highest number of revisions
  .col-lg-6#overall-max-revision-table
    .main-card.mb-3.card
      .card-body
        h5.card-title Top 2 articles with the highest number of revisions
        table.mb-0.table.table-striped
          thead
            tr
              th.text-center(style='width: 5%') #
              th.text-center(style='width: 75%') Title
              th.text-center(style='width: 20%') Number of Revisions
          tbody

