//- Bar chart & line chart
.row.mt-4
  .col-md-12
    .main-card.card
      .card-body
        ul.tabs-animated-shadow.nav-justified.tabs-animated.nav
          li.nav-item
            a#tab-c1-0.nav-link.active.show(role='tab' data-toggle='tab' href='#overall-bar-chart-tab-content' aria-selected='false')
              span.nav-text Bar Chart
          li.nav-item
            a#tab-c1-1.nav-link.show(role='tab' data-toggle='tab' href='#overall-line-chart-tab-content' aria-selected='false')
              span.nav-text Line Chart
        .tab-content
          #overall-bar-chart-tab-content.tab-pane.active.show(role='tabpanel')
            .chartjs-size-monitor(style='position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;')
              .chartjs-size-monitor-expand(style='position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;')
                div(style='position:absolute;width:1000000px;height:1000000px;left:0;top:0')
              .chartjs-size-monitor-shrink(style='position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;')
                div(style='position:absolute;width:200%;height:200%;left:0; top:0')
            h5.card-title Revision number distribution by user type
            canvas#overall-bar-chart.chartjs-render-monitor(width='910' height='454' style='display: block; height: 227px; width: 455px;margin: auto')
          #overall-line-chart-tab-content.tab-pane.show(role='tabpanel')
            .chartjs-size-monitor(style='position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;')
              .chartjs-size-monitor-expand(style='position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;')
                div(style='position:absolute;width:1000000px;height:1000000px;left:0;top:0')
              .chartjs-size-monitor-shrink(style='position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;')
                div(style='position:absolute;width:200%;height:200%;left:0; top:0')
            h5.card-title Revision number distribution by user type
            canvas#overall-line-chart.chartjs-render-monitor(width='910' height='454' style='display: block; height: 227px; width: 455px;margin: auto')

