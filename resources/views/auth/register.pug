extends ../layouts/layout

block content
  .tab-content
    #tab-content-0.tab-pane.tabs-animation.fade.show.active(role='tabpanel')
      .row.justify-content-center
        .col-md-6
          .main-card.mb-3.card
            .card-body
              h5.card-title Sign Up
              form#register-form(action='/register' method='POST')
                .position-relative.form-group
                  label(for='username') Username
                  input#username.form-control(name='username' placeholder='Username' type='text' value=username)
                .position-relative.form-group
                  label(for='email') Email
                  input#email.form-control(name='email' placeholder='Email' type='email' value=email)
                .position-relative.form-group
                  label(for='password') Password
                  input#password.form-control(name='password' placeholder='Password' type='password' value=password)
                .position-relative.form-group
                  label(for='password-confirm') Confirm Password
                  input#password-confirm.form-control(name='password_confirm' placeholder='Confirm Password' type='password' value=password_confirm)
                button.mt-1.btn.btn-primary Sign Up
                small.form-text.text-muted
                  | Already had an account?
                  a(href='/login') Log In

block javascripts-foot
  script(src="/javascripts/auth.js")

